{
  "uid": "docker-logs",
  "title": "Docker Logs",
  "schemaVersion": 38,
  "version": 1,
  "timezone": "browser",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "container",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "query": {
          "query": "label_values(container_id)"
        },
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Log Volume by Container",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (container_id) (rate({job=\"docker\"}[1m]))",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 2,
      "type": "logs",
      "title": "Logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"docker\", container_id=~\"$container\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 24,
        "h": 14
      },
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ]
}
